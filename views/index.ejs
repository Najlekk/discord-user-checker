  <body class="bg-dark text-white">
    <div class="container">
      <div class="row">
        <label for="discord_id">Discord ID</label>
        <input type="text" maxlength="22" class="form-control" id="discord_id" placeholder="Enter discord id">
      </div>
      <button type="submit" onclick="get_user_info();" class="btn btn-primary">Submit</button>
      <div class="row" style="justify-content: center; margin-top: 4rem; display: none" id="info">
        <div class="col-md-2" style="text-align: center">
          <img src="" id="avatar">
        </div>
        <div class="col-md-4">
          <img src="" id="banner">
          <p><i class="person"></i><strong>User ID: </strong><span class="result"></span></p>
          <p><i class="hash"></i><strong>Username: </strong><span class="result"></span></p>
          <p><i class="palette"></i><strong>Banner Color: </strong><span class="result"></span></p>
        </div>
      </div>
    </div>
